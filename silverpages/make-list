. config
rm -rf output
mkdir output || true
cp -a cm output
cp output/cm/cormissing* output/

echo "<html><body>" > output/index.html

for i in *.mono; do
	echo Generating status page for $i
	b=`basename $i .mono`
	o=$b.diff
	mono /cvs/cecil/corcompare/mono-api-diff.exe `basename $i .mono`.source $i > $o
	mono /cvs/cecil/corcompare/transform.exe $o mono-api.xsl > output/$b.html
	echo "<p>Assembly: <a href=\"$b.html\">$b</a>" >> output/index.html
done
echo "</body></html>" >> output/index.html