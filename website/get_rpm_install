#!/bin/sh

if [[ x$DISTRO == xfedora-* ]]; then
	RC_URL="http://www.snorp.net/files/packages/rcd-fc3/"
else
	RC_URL="ftp://ftp.novell.com/pub/ximian/redcarpet2/$DISTRO"
fi


cat <<EOF
	<p>
	The best way to install Mono on your system is to use Novell's Red Carpet.
	If you do not already have Red Carpet, you can <a href='$RC_URL'>download it.</a>
	</p>
	
	<p>To use Red Carpet, execute these commands:</p>
	
	<xmp class='shell'>
		rug sa http://go-mono.com/download
		rug sub mono-1.1
		rug sub gtk-sharp
		rug in mono-core gtk-sharp
	</xmp>
EOF

fi