#!/usr/bin/env python

import sys
import string

sys.path += ['../pyutils']

import sshutils
import packaging

buildenv = packaging.buildenv(sys.argv[1], print_output=1)

if len(sys.argv) > 2:
	command = string.join(sys.argv[2:], ' ')
	print "Executing: %s" % command
	status, output = buildenv.ssh.execute(command)
	sys.exit(status)
else:
	print "Logging in"
	buildenv.ssh.interactive_login()

