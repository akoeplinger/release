			find . -iname "makefile\.in" | xargs sed -i -e 's@which[[:space:]]*gtkdoc-rebase@/usr/bin/false@'
			
			# Mac OS 10.7 Lion patches
			PATCHES=`curl -L http://beefydude.lab.xamarin.com/patches/gtk/patchlist.txt | egrep -o '\"[^\"]*\"' | sed 's/\"//g'`
