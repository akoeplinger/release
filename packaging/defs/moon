POSTBUILD_STEP4 () {
	make distclean
	./configure --enable-user-plugin --without-ffmpeg
	make
	target=$build_location/steps/plugin-1.1
	mkdir -p $target
	cp plugin/novell-moonlight*.xpi $target/
}

POSTBUILD_STEP_NAME5="test"
POSTBUILD_STEP5 () {
	wget http://build.mono.lab.novell.com/~builder/ndesk-dbus.rpm
	sudo rpm -U ndesk-dbus.rpm 

	make distclean
	./configure
	make

	Xvfb -ac -nolisten tcp -screen 0 1280x1280x24 :1 &
	sleep 3
	Xnest -ac -nolisten tcp -display :1 -depth 24 -geometry 1280x1280 :2 &
	eval $(dbus-launch --auto-syntax)
	DISPLAY=:2 make run-tests
	kill $DBUS_SESSION_BUS_PID
	kill %2
	kill %1

	target=$build_location/steps/test
	mv test/html_report $target
}

POSTBUILD_STEP_NAME6="ms-test"
POSTBUILD_STEP6 () {
	curl -s http://build.mono.lab.novell.com/~builder/drop1030.tar.bz2 | tar xj

	Xvfb -ac -nolisten tcp -screen 0 1280x1280x24 :1 &
	sleep 3
	Xnest -ac -nolisten tcp -display :1 -depth 24 -geometry 1280x1280 :2 &
	eval $(dbus-launch --auto-syntax)
	DISPLAY=:2 make run-ms-tests
	kill $DBUS_SESSION_BUS_PID
	kill %2
	kill %1

	target=$build_location/steps/ms-test
	mv test/html_report $target
}
