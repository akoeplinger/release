BUILD_HOSTS=(
	fedora-3-i386
)

USE_HOSTS=(
	ALL
)

MONO_DEPS=(
	mono
)

get_destroot () {
	DEST_ROOT=noarch
}

BUILD_DIR="/tmp"

make_dist () {
	# Downloaded from http://www.codeplex.com/Project/FileDownload.aspx?ProjectName=IronPython&DownloadId=557
	# But no direct link, so providing one on primates
        curl -O http://primates.ximian.com/~wberrier/packaging/sources/ironpython/IronPython-$VERSION.zip
}

