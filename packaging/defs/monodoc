web_index=3

BUILD_HOSTS=(
	suse-100-i586
)

USE_HOSTS=(
	ALL
)

MONO_DEPS=(
	libgdiplus
	mono
)

# monodoc is in this list in order to build docscripts monoapi from mono tree
# Put this dependency here so we can boostrap, but depend on it after that
MONO_RECOMMEND_DEPS=(
	monodoc
)

get_destroot () {
	DEST_ROOT=noarch
}

HEAD_PATH=(
	trunk/monodoc
	trunk/mcs/errors
	trunk/mono/mono
)
RELEASE_PATH=(
	tags/monodoc-[[version]]
	tags/mono-[[version]]/mcs/errors
	tags/mono-[[version]]/mono/mono
)

make_dist () {
	#Take care of cs-errors and monoapi docs
	mkdir ../mcs
	mv ../errors ../mcs

	cd ../mono/docscripts
	mkdir -p html
	make extract
	make
	cd -
	cp ../mono/docscripts/*zip ../mono/docscripts/*tree ../mono/docscripts/*source extras

	. /etc/profile
	./autogen.sh

	# Use dist-zip instead, otherwise long filenames get chopped
	#make dist
	make dist-zip
}

