get_destroot () {
	DEST_ROOT=$DISTRO
}

HEAD_PATH=(
	branches/gtk-sharp-2-12-branch
)
RELEASE_PATH=(
        tags/gtk-sharp/[[versiondot]]
)

update_version_file () {
	sed -i "s/^\(GTK_SHARP_VERSION\)=.*/\1=$VERSION/" bootstrap-2.12
}

make_dist () {
        # This is needed on suse systems with gnome in /opt
        . /etc/profile
        ./bootstrap-2.12
        make dist-bzip2
}

