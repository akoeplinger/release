EXTERNAL_SOURCE=1

# Build on 10.2 instead of 10.0 so that the lang file doesn't get included, 
# and the rpm can be used everywhere
BUILD_HOSTS=(
	suse-102-i586
)

USE_HOSTS=(
	ALL
)

MONO_DEPS=(
	mono
	nant
)

MONO_RECOMMEND_DEPS=(
        libgdiplus
)

get_destroot () {
	DEST_ROOT=noarch
}

BUILD_DIR="/tmp"

make_dist () {
	curl -O http://dist.codehaus.org/boo/distributions/boo-$VERSION-src.tar.bz2
}

