macos_10_ppc_ZIP_BUILD () {

	# Needed without below sed...
	#export PATH="/usr/X11R6/bin/:$PATH"

	# For fontconfig (bundle this ourselves?  What would be the point?)
	# Needed?
	#export PKG_CONFIG_PATH="/usr/X11R6/lib/pkgconfig/:$PKG_CONFIG_PATH"

	# File as bug #77620 in ximian bugzilla
	file="configure"
        sed -e "s/freetype-config/pkg-config freetype2 fontconfig/g" $file > $file.new; mv $file.new $file; chmod 755 $file

	# Mac OS doesn't come with a fontconfig.pc ... generate one
	cat <<EOF > /tmp/build_deps/lib/pkgconfig/fontconfig.pc
prefix=/usr/X11R6
exec_prefix=\${prefix}
libdir=/usr/X11R6/lib
includedir=\${prefix}/include

Name: Fontconfig
Description: Font configuration and customization library
Version: 2.3.94
Libs: -L\${libdir} -lfontconfig -lexpat
Cflags: -I\${includedir}
EOF

	./configure --enable-quartz --prefix=/tmp/install --with-libjpeg --includedir=/tmp/build_deps/include || exit 1
        make || exit 1
        make install || exit 1

}

