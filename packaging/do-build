#!/bin/sh

BB_REPOUSER=distro@evo-build-master.boston.ximian.com
BB_REPODIR=/srv/source-repository
BB_REPOPORT=22
 
CVSROOT=":ext:distro@cvs.ximian.com:/cvs/helix-gnome"
CVS_RSH=/usr/bin/bb_ssh
 
export BB_REPODIR BB_REPOUSER BB_REPOPORT CVSROOT CVS_RSH

echo failure > /tmp/status

rm -rf /tmp/root/built-packages || exit 1
cd /tmp && rm -rf scratch && mkdir scratch && cd scratch || exit 1
cvs co mono-conf || exit 1
cd mono-conf/$1 || exit 1
bb_redo || exit 1
echo success > /tmp/status